    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "apps/earn",
            "cwd": "${workspaceRoot}",
            "env": {
                "NEXT_PUBLIC_ALCHEMY_ID": "my_key"
            },
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "exec", "turbo", "dev", "--filter", "earn"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "scripts/earn",
            "cwd": "${workspaceRoot}",
            "env": {
                "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/earn",
                "REDIS_URL": "redis://localhost:6379",
            },
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start", "--prefix", "${workspaceFolder}/scripts/earn"
            ]
        }
    ]
}